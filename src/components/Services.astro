<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Services That Drive
        <span
          class="bg-gradient-to-r from-blue-800 to-blue-500 bg-clip-text text-transparent"
        >
          Results</span
        >
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Comprehensive UI/UX design services tailored to your business needs and
        user goals.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service, index) => (
          <Card
            key={index}
            className="group hover:shadow-2xl transition-all duration-300 border-0 shadow-lg hover:-translate-y-2"
          >
            <CardHeader className="text-center pb-4">
              <div class="mx-auto w-16 h-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                {/* <service.icon class="h-8 w-8 text-purple-600" /> */}
              </div>
              <CardTitle className="text-xl font-bold text-gray-900">
                {service.title}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <CardDescription className="text-gray-600 mb-4 text-center">
                {service.description}
              </CardDescription>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="text-sm text-gray-500 flex items-center">
                    <div class="w-1.5 h-1.5 bg-purple-400 rounded-full mr-3" />
                    {feature}
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
