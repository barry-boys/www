---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Code2, MessageSquare, Paintbrush, RefreshCw } from "lucide-react";

const services = [
  {
    icon: Code2,
    title: "Custom UI Development",
    description:
      "Build modern, responsive web applications using cutting-edge frameworks and best practices.",
    features: [
      "React and other modern frameworks",
      "Component-based architecture",
      "Performance optimization",
      "Cross-browser compatibility",
    ],
  },
  {
    icon: Paintbrush,
    title: "Design Implementation",
    description:
      "Transform Figma, Sketch, or Adobe XD files into fully functional, responsive interfaces.",
    features: [
      "Figma to code conversion",
      "Pixel-perfect implementation",
      "Design system development",
      "Responsive breakpoints",
    ],
  },
  {
    icon: RefreshCw,
    title: "Frontend Modernization",
    description:
      "Migrate legacy applications to modern UI frameworks with improved user experiences.",
    features: [
      "Legacy code migration",
      "Performance improvements",
      "Modern framework integration",
      "Minimal downtime deployment",
    ],
  },
  {
    icon: MessageSquare,
    title: "Consulting & Strategy",
    description:
      "Expert guidance on UI/UX decisions, technology choices, and development roadmaps.",
    features: [
      "Technical architecture review",
      "UI/UX audit and recommendations",
      "Technology stack planning",
      "Team training and mentorship",
    ],
  },
];
---

<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Services That Drive
        <span
          class="bg-gradient-to-r from-blue-800 to-blue-500 bg-clip-text text-transparent"
        >
          Results</span
        >
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Comprehensive UI/UX design services tailored to your business needs and
        user goals.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service, index) => (
          <Card
            key={index}
            className="group hover:shadow-2xl transition-all duration-300 border-0 shadow-lg hover:-translate-y-2"
          >
            <CardHeader className="text-center">
              <div class="mx-auto w-16 h-16 bg-gradient-to-br from-blue-100 to-blue-300 group-hover:from-blue-400 group-hover:to-blue-600 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                <service.icon className="h-8 w-8 text-blue-600 group-hover:text-white" />
              </div>
              <CardTitle className="text-xl font-bold text-gray-900">
                {service.title}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <CardDescription className="text-gray-600 mb-4 text-center">
                {service.description}
              </CardDescription>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="text-sm text-gray-500 flex items-center">
                    <div class="w-1.5 h-1.5 bg-blue-400 rounded-full mr-3" />
                    {feature}
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
