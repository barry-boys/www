---
import { Mail, MapPin, Phone, Send } from "lucide-react";
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Let's Work Together
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Lorem ipsum dolor sit amet consectetur adipiscing elit. Sit amet
        consectetur adipiscing elit quisque faucibus ex. Adipiscing elit
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Get in Touch</h3>
        <div class="space-y-6">
          <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-lg mr-4">
              <Mail className="h-6 w-6 text-blue-800" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Email</div>
              <div class="text-gray-600">lorem@ipsum.com</div>
            </div>
          </div>
          <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-lg mr-4">
              <Phone className="h-6 w-6 text-blue-800" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Phone</div>
              <div class="text-gray-600">+1 (123) 456-7890</div>
            </div>
          </div>
          <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-lg mr-4">
              <MapPin className="h-6 w-6 text-blue-800" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Location</div>
              <div class="text-gray-600">Lorem ipsum, IL</div>
            </div>
          </div>
        </div>

        <div class="mt-12">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">
            Why Choose &lt;name&gt; LLC?
          </h4>
          <ul class="space-y-3">
            <li class="flex items-start">
              <div class="w-2 h-2 bg-blue-800 rounded-full mt-2 mr-3"></div>
              <span class="text-gray-700">Lorem ipsum dolor sit amet</span>
            </li>
            <li class="flex items-start">
              <div class="w-2 h-2 bg-blue-800 rounded-full mt-2 mr-3"></div>
              <span class="text-gray-700">Lorem ipsum dolor sit amet</span>
            </li>
            <li class="flex items-start">
              <div class="w-2 h-2 bg-blue-800 rounded-full mt-2 mr-3"></div>
              <span class="text-gray-700">Lorem ipsum dolor sit amet</span>
            </li>
            <li class="flex items-start">
              <div class="w-2 h-2 bg-blue-800 rounded-full mt-2 mr-3"></div>
              <span class="text-gray-700">Lorem ipsum dolor sit amet</span>
            </li>
          </ul>
        </div>
      </div>

      <div>
        <form onsubmit="" class="bg-gray-50 p-8 rounded-xl">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                value={null}
                onchange=""
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                value={null}
                onchange=""
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-6">
            <div>
              <label
                for="company"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Company
              </label>
              <input
                type="text"
                id="company"
                name="company"
                value={null}
                onchange=""
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>

          <div class="mb-6">
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              value={null}
              onchange=""
              required
              rows={4}
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Tell me about your project..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-blue-800 text-white px-6 py-4 rounded-lg hover:bg-blue-900 transition-colors duration-200 flex items-center justify-center group"
          >
            Send Message
            <Send
              className="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform duration-200"
            />
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
